@model List<EntityLayer.Concrete.Product>

@{
    ViewData["Title"] = "DailyPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="mb-2">Günlük Satış</h2>

<form asp-controller="Production" asp-action="DailyPrice" method="get">
    <select class="form-control" name="sayi1" id="sayi1">
        @foreach (var item in Model)
       {
           <option value="@item.ProductId">@item.ProductName</option>
       }
    </select>
    <input class="form-control mt-2" type="text" name="sayi2" id="sayi2" placeholder="Pazartesi Satış" />
    <input class="form-control mt-2" type="text" name="sayi3" id="sayi3" placeholder="Salı Satış" />
    <input class="form-control mt-2" type="text" name="sayi4" id="sayi4" placeholder="Çarşamba Satış" />
    <input class="form-control mt-2" type="text" name="sayi5" id="sayi5" placeholder="Perşembe Satış" />
    <input class="form-control mt-2" type="text" name="sayi6" id="sayi6" placeholder="Cuma Satış" />
    <input class="form-control mt-2" type="text" name="sayi7" id="sayi7" placeholder="Cumartesi Satış" />
    <input class="form-control mt-2" type="text" name="sayi8" id="sayi8" placeholder="Pazar Satış" />
    <button class="btn btn-danger mt-2">Hesapla</button>
</form>
<h2 class="mt-2">Toplam Satış Cirosu: @ViewBag.toplam</h2>
</div>
<div class="col-md-6">
        <div class="au-card m-b-30">
             <div class="au-card-inner">
                  <h3 class="title-2 m-b-40">Bar chart</h3>
                  <canvas id="barChart2"></canvas>
             </div>
        </div>
    </div>
</div>                          