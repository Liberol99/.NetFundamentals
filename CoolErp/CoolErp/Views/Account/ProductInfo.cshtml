@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "ProductInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div id="page-content">
    <div class="padding">
        <div class="row">
            <div class="col-md-12">
                <div class="card user-card-full justify-content-center">
                    <div class="row m-l-0 m-r-0 justify-content-center">
                        <div class="col-md-12 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="@Model.Category.Picture" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">@Model.ProductName</h6>
                                <p class="mt-2" style="font-size:larger;color:black">@Model.Category.Description</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Bilgiler</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Stok</p>
                                        <h6 class=" f-w-400">@Model.UnitsInStock</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Fiyat</p>
                                        <h6 class=" f-w-400">@Model.UnitPrice</h6>
                                    </div>
                                </div>
                                @*<h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>*@
                                <div class="row mt-2">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Firma</p>
                                        <h6 class=" f-w-400">@Model.Supplier.CompanyName</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Pazarlama Sorumlusu</p>
                                        <h6 class=" f-w-400">@Model.Supplier.ContactName</h6>
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>