@model List<EntityLayer.Concrete.Bank>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-12  d-flex flex-row align-items-center">
                                    <h2 class="title-1 mb-2 mr-3 ml-2">Banka Kartı Listesi</h2>
                                    <a class="btn btn-success mb-2" href="/Bank/Add">Banka Ekle</a>
                                    </div>
                                </div>
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Company Name</th>
                                                <th>Payment Amount</th>
                                                <th>Name on Card</th>
                                                <th>Card Number</th>
                                                <th>CVV</th>
                                                <th>Expiration</th>
                                                <th class="text-right">Banka Güncelle</th>
                                                <th class="text-right">Banka Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.Customer.CompanyName</td>
                                                <td>@item.PaymentAmount</td>   
                                                <td>@item.NameOnCard</td>  
                                                <td>@item.CardNumber</td>  
                                                <td>@item.CVV</td>  
                                                <td>@item.Expiration</td>
                                                <td class="text-right"><a class="btn btn-warning" href="/Bank/Update/@item.BankId">Güncelle</a></td>
                                                <td class="text-right"><a class="btn btn-danger" href="/Bank/Delete/@item.BankId">Sil</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>