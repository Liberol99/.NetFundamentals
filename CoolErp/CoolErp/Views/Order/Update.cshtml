@model EntityLayer.Concrete.Order
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="ml-2">@Model.ShipName Güncelle</h1>
<a class="btn btn-info ml-2 mb-2" href="/Order/Show">İş Sayfası</a>
                                <form asp-controller="Order" asp-action="Update" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>İş</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        
                                            <div class="form-group">
                                                <input asp-for="OrderId" type="hidden" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input asp-for="CustomerId" type="hidden" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input asp-for="EmployeeId" type="hidden" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input asp-for="ShipperId" type="hidden" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">İş Tarihini Giriniz</label>
                                                <input asp-for="OrderDate" type="email class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Teslimat Tarihini Giriniz</label>
                                                <input asp-for="RequiredDate" type="email class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Sevk Tarihin Giriniz</label>
                                                <input asp-for="ShippedDate" type="email class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Sevk Kodunu Giriniz</label>
                                                <input asp-for="ShipVia" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Adını Giriniz</label>
                                                <input asp-for="ShipName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Adresini Giriniz</label>
                                                <textarea asp-for="ShipAddress" class="form-control" placeholder="Tedarikçi Adresini Giriniz"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Şehrini Giriniz</label>
                                                <input asp-for="ShipCity" type="text" class="form-control">
                                            </div>
                                             <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Bölgesini Giriniz</label>
                                                <input asp-for="ShipRegion" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Posta Kodunu Giriniz</label>
                                                <input asp-for="ShipPostalCode" type="text" class="form-control">
                                            </div>
                                             <div class="form-group">
                                                <label class="form-control-label">Tedarikçi Ülkesini Giriniz</label>
                                                <input asp-for="ShipCountry" type="text" class="form-control">
                                            </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary ml-2">İş Güncelle</button>
                                </form>