
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="ml-2">Kategori Ekle</h1>

<form asp-controller="Category" asp-action="Add" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Kategori</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        <div class="form-group">
                                            <input name="CategoryName" type="text" placeholder="Kategori Adını Giriniz" class="form-control">
                                        </div>
                                         <div class="form-group">
                                            <input name="Description" type="text" placeholder="Kategori Açıklamasını Giriniz" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input name="Picture" type="text" placeholder="Fotoğraf Linkini Giriniz" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-success ml-2">Ekle</button>
                                </form>