@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="ml-2">@Model.CategoryName Güncelle</h1>
<a class="btn btn-info ml-2 mb-2" href="/Category/Show">Kategori Sayfası</a>

                                <form asp-controller="Category" asp-action="Update" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Kategori</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        
                                            <div class="form-group">
                                                <input asp-for="CategoryId" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Kategori Adını Giriniz</label>
                                                <input asp-for="CategoryName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Kategori Açıklamasını Giriniz</label>
                                                <textarea asp-for="Description" type="text" class="form-control"><</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Fotoğraf Linkini Giriniz</label>
                                                <input asp-for="Picture" type="text" class="form-control">
                                            </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary ml-2">Kategori Güncelle</button>
                                </form>