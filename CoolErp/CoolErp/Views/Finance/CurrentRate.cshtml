@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model IPagedList<EntityLayer.Concrete.Product>

@{
    ViewData["Title"] = "CurrentRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-color:#E5E5E5">


<form asp-controller="Finance" asp-action="CurrentRate" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Cari Oran</strong>
                                        <small> Hesaplama</small>
                                    </div>
                                       <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Tüm Ürünler</th>
                                                <th>Kategoriler</th>
                                                <th>Fotoğraf</th>
                                                <th>Satış Fiyatı</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.Category.CategoryName</td>
                                                <td><img src="@item.Category.Picture" width="100px" height="100px" /></td>
                                                <td>@item.UnitPrice</td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                           @Html.PagedListPager((IPagedList)Model,page => Url.Action("CurrentRate",new {page}))
                                       
                                        </div>
                                        
                                </div>

                                <div class="form-group">
                                    <label class="form-control-label" style="font-size:x-large;font-weight:500">Tüm Varlıklar : @ViewBag.toplam</label>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label" style="font-size:x-large;font-weight:500">Kısa Vadeli Borçlar</label>
                                    <input  name="p1" type="text" class="form-control">
                                </div>
                                <button class="btn btn-success">Hesapla</button>
                                </form>
                                <div class="d-flex flex-row mt-2">
                                    <h1>@ViewBag.sonuc2</h1>
                                    <h1 class="ml-2">@ViewBag.mesaj</h1>
                                </div>
</div>