@model List<EntityLayer.Concrete.Product>
<section class="ftco-section">
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center">
						<h2 class="heading-section mb-5 pb-md-4">Ürünler</h2>
					</div>
					<div class="col-md-12">
						<div class="featured-carousel owl-carousel">
							@foreach (var item in Model)
                            {
                                <div class="item">
								<div class="work">
									<div class="img d-flex align-items-center justify-content-center rounded" style="background-image: url(@item.Category.Picture);">
										<a asp-controller="Account" asp-action="ProductInfo" asp-route-id="@item.ProductId" class="icon d-flex align-items-center justify-content-center">
											<span class="ion-ios-search"></span>
										</a>
									</div>
									<div class="text pt-3 w-100 text-center">
										<h3><a href="#">@item.Category.CategoryName</a></h3>
										<span>@item.ProductName</span>
									</div>
								</div>
							</div>
                            }
						</div>
					</div>
				</div>
			</div>
		</section>










