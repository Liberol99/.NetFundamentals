@model EntityLayer.Concrete.Supplier
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="ml-2">@Model.CompanyName Güncelle</h1>
<a class="btn btn-info ml-2 mb-2" href="/Supplier/Show">Tedarikçi Sayfası</a>
                                <form asp-controller="Supplier" asp-action="Update" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Tedarikçi</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                            <div class="form-group">
                                                <input asp-for="SupplierId" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Şirket Adını Giriniz</label>
                                                <input asp-for="CompanyName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">İletişim Adını Giriniz</label>
                                                <input asp-for="ContactName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">İletişim Başlığını Giriniz</label>
                                                <input asp-for="ContactTitle" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">İletişim Başlığını Giriniz</label>
                                                <input asp-for="CompanyName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Adres Giriniz</label>
                                                <textarea asp-for="Address" type="text" class="form-control"><</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Şehir Adını Giriniz</label>
                                                <input asp-for="City" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Ülke Adını Giriniz</label>
                                                <input asp-for="Region" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Posta Kodunu Giriniz</label>
                                                <input asp-for="PostalCode" type="text" class="form-control">
                                            </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary ml-2">Tedarikçi Güncelle</button>
                                </form>