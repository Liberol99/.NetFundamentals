@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="ml-2">Tedarikçi Ekle</h1>

                                            <form asp-controller="Supplier" asp-action="Add" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Tedarikçi</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        <div class="form-group">
                                            <input name="CompanyName" type="text" placeholder="Şirket Adını Giriniz" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input name="ContactName" type="text" placeholder="İletişim Adını Giriniz" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input name="ContactTitle" type="text" placeholder="İletişim Başlığını Giriniz" class="form-control">
                                        </div>
                                         <div class="form-group">
                                             <textarea name="Address" placeholder="Adres Giriniz"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <input name="City" type="text" placeholder="Şehir Adını Giriniz" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input name="Region" type="text" placeholder="Ülke Adını Giriniz" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input name="PostalCode" type="text" placeholder="Posta Kodunu Giriniz" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-success ml-2">Ekle</button>
                                </form>