@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="ml-2">@Model.ProductName Güncelle</h1>
<a class="btn btn-info ml-2 mb-2" href="/Product/Show">Ürün Sayfası</a>
                                <form asp-controller="Product" asp-action="Update" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Ürün</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        
                                            <div class="form-group">
                                                <input asp-for="@Model.ProductId" type="hidden" class="form-control">
                                            </div>

                                        <div class="form-group">
                                            <label class=" form-control-label">Ürün Adını Giriniz</label>
                                            <input asp-for="@Model.ProductName" type="text" class="form-control">
                                        </div>
                                        <div>
                                            <div class="form-group">
                                                <input asp-for="@Model.SupplierId" type="hidden" class="form-control">
                                            </div>
                                        </div>
                                        <div>
                                             <div class="form-group">
                                                <input asp-for="@Model.CategoryId" type="hidden" class="form-control">
                                            </div>
                                         </div>
                                         <div class="form-group">
                                            <label class=" form-control-label">Ürün Fiyatını Giriniz</label>
                                            <input asp-for="@Model.UnitPrice" type="text" class="form-control">
                                        </div>
                                         <div class="form-group">
                                            <label class=" form-control-label">Ürün Stok Adetini Giriniz</label>
                                            <input asp-for="@Model.UnitsInStock" type="text" class="form-control">
                                        </div>
                                         <div class="form-group">
                                            @*<label class=" form-control-label">Ürün Maliyetini Giriniz</label>*@
                                            <input asp-for="@Model.UnitsInCost" type="hidden" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary ml-2">Güncelle</button>
                                </form>