@model List<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-12  d-flex flex-row align-items-center">
                                    <h2 class="title-1 mb-2 mr-3 ml-2">Ürün Kartı Listesi</h2>
                                    <a class="btn btn-success mb-2" href="/Product/Add">Ürün Ekle</a>
                                    </div>
                                </div>
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Category</th>
                                                <th>Supplier</th>
                                                <th>Product Name</th>
                                                <th class="text-right">Unit Price</th>
                                                <th class="text-right">Units In Stock</th>
                                                <th class="text-right">Ürün Güncelle</th>
                                                <th class="text-right">Ürün Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.Category.CategoryName</td>
                                                <td>@item.Supplier.CompanyName</td>
                                                <td>@item.ProductName</td>
                                                <td class="text-right">$@item.UnitPrice</td>
                                                <td class="text-right">@item.UnitsInStock</td>
                                                <td class="text-right"><a class="btn btn-warning" href="/Product/Update/@item.ProductId">Güncelle</a></td>
                                                <td class="text-right"><a class="btn btn-danger" href="/Product/Delete/@item.ProductId">Sil</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>