@model List<EntityLayer.Concrete.Shipper>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-12  d-flex flex-row align-items-center">
                                    <h2 class="title-1 mb-2 mr-3 ml-2">Kargo Kartı Listesi</h2>
                                    <a class="btn btn-success mb-2" href="/Shipper/Add">Kargo Ekle</a>
                                    </div>
                                </div>
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Company Name</th>
                                                <th>Phone</th>
                                                <th class="text-right">Kargo Güncelle</th>
                                                <th class="text-right">Kargo Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.CompanyName</td>
                                                <td>@item.Phone</td>
                                                <td class="text-right"><a class="btn btn-warning" href="/Shipper/Update/@item.ShipperId">Güncelle</a></td>
                                                <td class="text-right"><a class="btn btn-danger" href="/Shipper/Delete/@item.ShipperId">Sil</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>