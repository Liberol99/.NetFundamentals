@model List<EntityLayer.Concrete.Employee>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-12  d-flex flex-row align-items-center">
                                    <h2 class="title-1 mb-2 mr-3 ml-2">Çalışan Kartı Listesi</h2>
                                    <a class="btn btn-success mb-2" href="/Employee/Add">Çalışan Ekle</a>
                                    </div>
                                </div>
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Mail</th>
                                                <th class="text-right">Image</th>
                                                <th class="text-right">Title</th>
                                                <th class="text-right">BirthDate</th>
                                                <th class="text-right">HireDate</th>
                                                <th class="text-right">Address</th>
                                                <th class="text-right">City</th>
                                                <th class="text-right">Region</th>
                                                <th class="text-right">Çalışan Güncelle</th>
                                                <th class="text-right">Çalışan Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Mail</td>
                                                <td><img width="100px" height="100px" src="@item.Image" /></td>
                                                <td>@item.Title</td>
                                                <td>@item.BirthDate</td>
                                                <td class="text-right">@item.HireDate</td>
                                                <td class="text-right">@item.Address</td>
                                                <td class="text-right">@item.City</td>
                                                <td class="text-right">@item.Region</td>
                                                <td class="text-right"><a class="btn btn-warning" href="/Employee/Update/@item.EmployeeId">Güncelle</a></td>
                                                <td class="text-right"><a class="btn btn-danger" href="/Employee/Delete/@item.EmployeeId">Sil</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>