@model EntityLayer.Concrete.Employee
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 class="ml-2">@Model.FirstName Güncelle</h1>
<a class="btn btn-info ml-2 mb-2" href="/Employee/Show">Çalışan Sayfası</a>
                                <form asp-controller="Employee" asp-action="Update" method="post">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Çalışan</strong>
                                        <small> Form</small>
                                    </div>
                                    <div class="card-body card-block">
                                        
                                            <div class="form-group">
                                                <input asp-for="EmployeeId" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Adını Giriniz</label>
                                                <input asp-for="FirstName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Soyadını Giriniz</label>
                                                <input asp-for="LastName" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Mail'i Giriniz</label>
                                                <input asp-for="Mail" type="email" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Maaş Giriniz</label>
                                                <input asp-for="Salary" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Şifresini Giriniz</label>
                                                <input asp-for="Password" type="password" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Fotoğraf Adersini Giriniz</label>
                                                <input asp-for="Image" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Başlığını Giriniz</label>
                                                <input asp-for="Title" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Doğum Tarihini Giriniz</label>
                                                <input asp-for="BirthDate" type="datetime" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan İşe Giriş Tarihini Giriniz</label>
                                                <input asp-for="HireDate" type="datetime" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Adresini Giriniz</label>
                                                <textarea asp-for="Address" type="text" class="form-control"><</textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Şehrini Giriniz</label>
                                                <input asp-for="City" type="text" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">Çalışan Ülkesini Giriniz</label>
                                                <input asp-for="Region" type="text" class="form-control">
                                            </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary ml-2">Çalışan Güncelle</button>
                                </form>