@model List<EntityLayer.Concrete.OrderDetail>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-12  d-flex flex-row align-items-center">
                                    <h2 class="title-1 mb-2 mr-3 ml-2">İş Detayları Kartı Listesi</h2>
                                    <a class="btn btn-success mb-2" href="/OrderDetail/Add">İş Detayı Ekle</a>
                                    </div>
                                </div>
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Ship Name</th>
                                                <th>Product Name</th>
                                                <th>Unit Price</th>
                                                <th>Quantity</th>
                                                <th>Discount</th>
                                                <th class="text-right">İş Detayı Güncelle</th>
                                                <th class="text-right">İş Detayı Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model){
                                            <tr>
                                                <td>@item.Order.ShipName</td>
                                                <td>@item.Product.ProductName</td>
                                                <td>@item.UnitPrice</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Discount</td>
                                                <td class="text-right"><a class="btn btn-warning" href="/OrderDetail/Update/@item.OrderDetailId">Güncelle</a></td>
                                                <td class="text-right"><a class="btn btn-danger" href="/OrderDetail/Delete/@item.OrderDetailId">Sil</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>