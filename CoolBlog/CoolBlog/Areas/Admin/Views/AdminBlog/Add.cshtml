@model (List<Category>,List<Writer>)
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-9">
        <form asp-area="Admin" asp-controller="AdminBlog" asp-action="Add" method="post" >
            <input class="form-control" type="text"  name="BlogTitle" placeholder="Başlık"/>
            <textarea class="form-control mt-2" type="text"  name="BlogContent" placeholder="İçerik"></textarea>
            <select name="CategoryId" class="form-control mt-2">
                <option selected>Kategori Seç</option>
                @foreach (var item in Model.Item1)
               {
                   <option value="@item.CategoryId">@item.CategoryName</option>
               }
            </select>
            <input class="form-control mt-2" type="text" name="BlogImage" placeholder="Foto Link" />
            <select name="WriterId" class="form-control mt-2">
                <option selected>Yazar Seç</option>
                @foreach (var item in Model.Item2)
               {
                   <option value="@item.WriterId">@item.WriterName</option>
               }
            </select>
            <button class="btn btn-success mt-2">Ekle</button>
        </form>
    </div>
</div>