@model Blog
@{
    ViewData["Title"] = "Index";
}

<section class="site-section">
      <div class="container">
        <div class="row mb-4">
          <div class="col-md-6">
            <h2 class="mb-4">Category: @Model.Category.CategoryName</h2>
          </div>
        </div>
        <div class="row blog-entries">
          <div class="col-md-12 col-lg-8 main-content">
            <div class="row mb-5 mt-5">
                <div class="col-md-8">
                    @Model.BlogContent
                </div>
                <div class="col-md-4">
                    <img src="@Model.BlogImage" />
                </div>
            </div>
          </div>
        </div>
      </div>
    </section>