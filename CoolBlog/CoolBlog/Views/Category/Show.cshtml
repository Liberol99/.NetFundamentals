@model List<Blog>
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-section">
      <div class="container">
        <div class="row mb-4">
          <div class="col-md-6">
            <h2 class="mb-4">Category: @ViewBag.categoryName</h2>
          </div>
        </div>
        <div class="row blog-entries">
          <div class="col-md-12 col-lg-8 main-content">
            <div class="row mb-5 mt-5">

              <div class="col-md-12">

                @foreach (var item in Model)
               {
                   <div class="post-entry-horzontal">
                  <a href="Category/Index/@item.CategoryId">
                    <div class="image element-animate" data-animate-effect="fadeIn" style="background-image: url(@item.BlogImage);"></div>
                    <span class="text">
                      <div class="post-meta">
                        <span class="category">@item.Category.CategoryName</span>
                        <span class="mr-2">@item.BlogCreateDate.ToString().Substring(0,10)</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span></span>
                      </div>
                      <h2>@item.BlogTitle</h2>
                    </span>
                  </a>
                </div>
               }


              </div>
            </div>

            

            

          </div>

          <!-- END main-content -->

          
          <!-- END sidebar -->

        </div>
      </div>
    </section>