
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="site-section">
      <div class="container">
        <div class="row mb-4">
          <div class="col-md-6">
            <h1>İletişim</h1>
          </div>
        </div>
        <div class="row blog-entries">
          <div class="col-md-12 col-lg-8 main-content">
            
            <form asp-controller="Contact" asp-action="Index"  method="post">
                  <div class="row">
                    <div class="col-md-4 form-group">
                      <label for="name">Kullanıcı Adı</label>
                      <input type="text" id="ContactUserName" name="ContactUserName" class="form-control ">
                    </div>
                    <div class="col-md-4 form-group">
                      <label for="email">Mail Adresi</label>
                      <input type="email" id="ContactMail" name="ContactMail" class="form-control ">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="message">Mesajınızı Yazın</label>
                      <textarea name="ContactMessage" id="ContactMessage" class="form-control " cols="30" rows="8"></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 form-group">
                      <button class="btn btn-primary">Gönder</button>
                    </div>
                  </div>
                </form>
            

          </div>

          <!-- END main-content -->

          
          <!-- END sidebar -->

        </div>
      </div>
    </section>