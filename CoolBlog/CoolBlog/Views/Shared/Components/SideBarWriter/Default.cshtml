<div class="sidebar-box">
              <h3 class="heading">Yazarlarımız</h3>
              <div class="post-entry-sidebar">
                <ul>
                  @foreach (var item in Model)
                 {
                     <li>
                    <a href="">
                      <img src="@item.WriterImage" alt="Image placeholder" class="mr-4">
                      <div class="text">
                        <h4>@item.WriterAbout</h4>
                        <div class="post-meta">
                          <span class="mr-2">@item.WriterMail</span> &bullet;<br>
                          <span class="ml-2"><span class="fa fa-comments mr-2"></span></span>
                        </div>
                      </div>
                    </a>
                  </li>
                 }
                </ul>
              </div>
            </div>